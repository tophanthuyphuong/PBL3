@model PBL3.Models.ChiTietHoaDon

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết hóa đơn</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SanPham.TenSP)
        </dd>
        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt>
            Giá tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SanPham.GiaBan)
        </dd>
        <dt>
            Ảnh sản phẩm
        </dt>

        <dd>
            <img src="~/Anh/@Model.SanPham.Anh" style="height:200px;width:200px;margin:10px" />
        </dd>



    </dl>
</div>
<p>
    <button type="button" name="back" class="btn btn--register" onclick="location.href='/ChiTietHoaDones/Index/@Model.ID_HoaDon'">Quay lại</button>
</p>
